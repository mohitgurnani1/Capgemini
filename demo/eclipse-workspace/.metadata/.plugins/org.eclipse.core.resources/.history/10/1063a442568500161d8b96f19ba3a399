package Bank;

public class Account {
private int id;
private double balance;
private Customer customer;

public Account(int id,double balance, Customer c){
	this.id=id;
	this.balance=balance;
	this.customer=c;
}

public int getId(){
	return id;
}

public double getbalance(){
	return balance;
}

public boolean deposit(double amount){
System.out.println(Thread.currentThread().getName()+"Dear ,"+customer.getName()+" Initial balance of your Account "+id+" is "+this.balance);
	double balance=this.balance; //READ
	balance+=amount;  // MODIFY	
	try {
		Thread.sleep(1000);
	} catch (InterruptedException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
	this.balance=balance;  //update
	System.out.println(Thread.currentThread().getName()+"Dear ,"+customer.getName()+" Balance of your Account "+id+" after deposit  is "+this.balance);
	return true;
}

public boolean withdraw(double amount){
	System.out.println(Thread.currentThread().getName()+"Dear ,"+customer.getName()+" Initial balance of your Account "+id+" is "+this.balance);

	double balance=this.balance; //READ
	balance-=amount;  // MODIFY	
	try {
		Thread.sleep(1000);
	} catch (InterruptedException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
	this.balance=balance;  //update
	System.out.println(Thread.currentThread().getName()+"Dear ,"+customer.getName()+" Balance of your Account "+id+" after withdraw  is "+this.balance);
	
	return true;
}



	
}
