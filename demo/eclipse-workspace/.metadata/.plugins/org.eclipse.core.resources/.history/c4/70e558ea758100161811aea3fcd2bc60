
public class LinkedList {

	public Node head=null;
	
	public class Node{
		private int data;
		private Node next;
		}
	
	public  void add(int val){
		if(head==null)
		{	head=new Node();
			head.data=val;
		}
		else
		{
			Node temp=new Node();
			temp.data=val;
			temp.next=head;
			head=temp;
		}
	}
	
	public void display(){
		Node head=LinkedList.this.head;
		while(head!=null)
		{
			System.out.println(head.data);
			head=head.next;
		}
		
	}
	
	public void update(int val,int newval){
		Node head=LinkedList.this.head;
		boolean flag=false;
		while(head!=null)
		{
			//System.out.println(head.data);
			if(head.data==val)
				{head.data=newval;
				System.out.println("Successfully updated");
				flag=true;
				}
			head=head.next;
	}
		if(flag==false)
			System.out.println("Node does not exist");

	}
	
	
	public void delete(int val){

		boolean flag=false;
		Node  head=LinkedList.this.head;
		Node helper=null;
		while(head!=null)
		{
			//System.out.println(head.data);
			if(head.data==val)
				{
				if(helper==null)
				{
					head=head.next;
					flag=true;
					
				}
				else if(head.next==null)
				{
					helper.next=null;
					head=helper;
					flag=true;
				}
				else{
				helper.next=head.next;
				head=null;
				head=helper;
				System.out.println("Successfully Deleted");		
				flag=true;
				}
				if(flag)
					break;
				}
			helper=head;
			head=head.next;
	}
		if(flag==false)
			System.out.println("Node does not exist");
}
	
	
}
