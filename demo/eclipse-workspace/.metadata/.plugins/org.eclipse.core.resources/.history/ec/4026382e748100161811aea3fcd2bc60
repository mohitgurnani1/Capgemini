
public class LinkedList {

	public Node head=null;
	
	public class Node{
		private int data;
		private Node next;
		}
	
	public  void addNode(int val){
		if(head==null)
		{	head=new Node();
			head.data=val;
		}
		else
		{
			Node temp=new Node();
			temp.data=val;
			temp.next=head;
			head=temp;
		}
	}
	
	public void display(Node head){
		while(head!=null)
		{
			System.out.println(head.data);
			head=head.next;
		}
		
	}
	
	public void updateNode(int val,int newval){
		Node head=LinkedList.this.head;
		boolean flag=false;
		while(head!=null)
		{
			//System.out.println(head.data);
			if(head.data==val)
				{head.data=newval;
				System.out.println("Successfully updated");
				flag=true;
				}
			head=head.next;
	}
		if(flag==false)
			System.out.println("Node does not exist");

	}
	
	
	public void deleteNode(int val){

		boolean flag=false;
		Node  head=LinkedList.this.head;
		while(head!=null)
		{
			//System.out.println(head.data);
			if(head.data==val)
				{head.data=newval;
				System.out.println("Successfully updated");
				flag=true;
				}
			head=head.next;
	}
		if(flag==false)
			System.out.println("Node does not exist");

		
	}
	
	
}
